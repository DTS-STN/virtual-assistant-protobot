{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./build",
    "rootDirs": ["./src", "./resources"],
    "sourceMap": true,
    "watch": true,
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuildinfo",
    "resolveJsonModule": true,         /* Include modules imported with .json extension. */
    "esModuleInterop": true,
    },
    "include": [
      "./**/*",
      "**/*.spec.ts"
  ],
    "exclude": [
      "./node_modules",
      "./build/**/*"
    ],

  }