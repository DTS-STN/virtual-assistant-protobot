image:
  repository: mtscontainers.azurecr.io/{{ requiredEnv "PROJECT" }}
  tag: "{{ env "DOCKER_TAG" | default "latest" }}"
  pullPolicy: Always
rbac:
  enabled: true
  teamId: {{ requiredEnv "RBAC_TEAM_ID" }}
  clusterRoleName: fujitsu-devs

ingress:
    enabled: true
    path: /
    annotations: {}
    hosts:
    {{- if or (eq .Environment.Name "prod-blue") (eq .Environment.Name "prod-green") }}
          - {{ requiredEnv "PROJECT" }}.{{ requiredEnv "BASE_DOMAIN" }}
    {{ else }}
          - {{ requiredEnv "PROJECT" }}-{{ requiredEnv "BRANCH" }}.{{ requiredEnv "BASE_DOMAIN" }}
    {{ end }}
resources:
  requests:
    cpu: 200m
    memory: 512Mi
healthChecks:
    livenessDelay: 15
    readinessDelay: 15
    livenessPath: /
    readinessPath: /
port: 3978
secrets:
   enabled: true
   image: mtscontainers.azurecr.io/azurekvsidecar:regulated-test
   env:
      - name: KEYVAULT_READ_USER
        value: {{ requiredEnv "KEYVAULT_READ_USER" }}
      - name: KEYVAULT_READ_PASSWORD
        value: {{ requiredEnv "KEYVAULT_READ_PASSWORD" }}
      - name: SUBSCRIPTION_ID
        value: {{ requiredEnv "SUBSCRIPTION_ID" }}
      - name: TENANT_ID
        value: {{ requiredEnv "TENANT_ID" }}
      - name: KEYVAULT_NAME
        value: {{ requiredEnv "KEYVAULT_NAME" }}
      - name: K8S_CLUSTER_NAME
        value: {{ requiredEnv "K8S_CLUSTER_NAME" }}
      - name: K8S_RG_NAME
        value: {{ requiredEnv "K8S_RG_NAME" }}
      - name: NAMESPACE
        value: {{ .Release.Namespace }}
      - name: SINGLE_SECRET
        value: "true"
      - name: SINGLE_SECRET_NAME
        value: oas-unblock-api-az-credentials
      - name: SECRET_LIST
        value: "bdm-dev-terraform-LuisAppIdEN,bdm-dev-terraform-LuisAPIKeyEN,bdm-dev-terraform-LuisAPIHostNameEN,bdm-dev-terraform-LuisCallbackAppIdEN,bdm-dev-terraform-LuisCallbackAPIKeyEN,bdm-dev-terraform-LuisCallbackAPIHostNameEN,bdm-dev-decd-oas-unblock-bot-appid,bdm-dev-decd-oas-unblock-bot-password,bdm-dev-terraform-LuisAppIdFR,bdm-dev-terraform-LuisAPIKeyFR,bdm-dev-terraform-LuisAPIHostNameFR,bdm-dev-terraform-LuisCallbackAppIdFR,bdm-dev-terraform-LuisCallbackAPIKeyFR,bdm-dev-terraform-LuisCallbackAPIHostNameFR,bdm-dev-unblock-bot-LuisAppIdEN,bdm-dev-unblock-bot-LuisAPIKeyEN,bdm-dev-unblock-bot-LuisHostNameEN,bdm-dev-unblock-bot-LuisAppIdFR,bdm-dev-unblock-bot-LuisAPIKeyFR"
extraEnv:
    - name: MicrosoftAppId
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-decd-oas-unblock-bot-appid
    - name: MicrosoftAppPassword
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-decd-oas-unblock-bot-password
    - name: LuisAppIdFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-unblock-bot-LuisAppIdFR
    - name: LuisAPIKeyFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-unblock-bot-LuisAPIKeyFR
    - name: LuisAPIHostNameFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-terraform-LuisAPIHostNameFR
    - name: LuisAppIdEN
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-unblock-bot-LuisAppIdEN
    - name: LuisAPIKeyEN
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-unblock-bot-LuisAPIKeyEN
    - name: LuisCallbackAppIdFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-terraform-LuisCallbackAppIdFR
    - name: LuisAPIHostNameEN
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-unblock-bot-LuisHostNameEN
    - name: LuisCallbackAPIKeyFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-terraform-LuisCallbackAPIKeyFR
    - name: LuisCallbackAPIHostNameFR
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
          key: bdm-dev-terraform-LuisCallbackAPIHostNameFR
    - name: LuisCallbackAppIdEN
      valueFrom:
        secretKeyRef:
          name: oas-unblock-api-az-credentials
