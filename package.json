{
    "name": "oas-virtual-assistant-bot",
    "version": "1.0.0",
    "description": "Bot Builder v4 based on core bot example",
    "author": "ESDC",
    "license": "MIT",
    "main": "app.js",
    "scripts": {
        "clean": "rimraf ./build",
        "format": "prettier --config .prettierrc --write \"src/**/*.ts\"",
        "build": "tsc --build && npm run copy-files",
        "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
        "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
        "start:prod": "node build/app.js",
        "start:dev": "npm run build && nodemon --exec ts-node src/app.ts",
        "test": "nyc mocha --timeout 10000 -r ts-node/register 'src/tests/**/*.test.ts'",
        "coverage": "nyc mocha",
        "test-coverage-ci": "nyc --reporter=cobertura mocha --reporter mocha-junit-reporter",
        "watch": "npm run copy-files && nodemon --watch ./src -e ts --exec \"npm run start\"",
        "copy-files": "copyfiles -u 1 \"src/**/*.{json,lg,png}\" \"./build/src\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DTS-STN/Virtual-Assistant-Bot-Framework"
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "**/.eslintrc.js",
            "**/*.d.ts",
            "**/*.test.*",
            "**/tests",
            "**/coverage",
            "**/deploymentScripts",
            "**/src/index.ts",
            ".history"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    },
    "dependencies": {
        "@types/i18n": "~0.13.1",
        "botbuilder": "~4.14.1",
        "botbuilder-ai": "~4.14.1",
        "botbuilder-dialogs": "~4.14.1",
        "botbuilder-testing": "~4.14.1",
        "copyfiles": "~2.4.1",
        "dotenv": "^10.0.0",
        "i18n": "^0.13.3",
        "lint-staged": "~11.1.2",
        "path": "^0.12.7",
        "restify": "~8.5.1",
        "sinon-chai": "^3.7.0",
        "ts-node": "~10.2.1",
        "ts-sinon": "^2.0.2"
    },
    "devDependencies": {
        "@types/chai": "~4.2.22",
        "@types/dotenv": "~8.2.0",
        "@types/mocha": "~9.0.0",
        "@types/node": "^10.17.27",
        "@types/restify": "~8.5.2",
        "@typescript-eslint/eslint-plugin": "~4.31.2",
        "chai": "~4.3.4",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-standard": "^5.0.0",
        "husky": "~4.3.8",
        "mocha": "~9.1.1",
        "nodemon": "~2.0.12",
        "nyc": "~15.1.0",
        "prettier": "~2.4.0",
        "tslint": "~6.1.3",
        "typescript": "~4.3.5",
        "ts-sinon": "~2.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts,js)": [
            "npm run lint:fix",
            "prettier --write"
        ]
    }
}
